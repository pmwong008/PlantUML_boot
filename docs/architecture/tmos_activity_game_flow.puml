@startuml
title TMOS Whiffie Game Flow

start

:Load Daily Challenge;

repeat
  :Hints & Guess;
  :Check Guess;
  if (Guess is Correct?) then (yes)
    if (Is Member?) then (yes)
      :Dashboard;
      if (Entitled for gifts?) then (yes)
        :Process Order;
      endif
    else (no)
      :Prompt Sign-Up;
      :Sign-Up Flow;
      :Dashboard;
      if (Entitled for gifts?) then (yes)
        :Process Order;
      endif
    endif
    break
  else (no)
    :Increment attempt count;
  endif
repeat while (Attempts < 5)

:Game Over;
stop
@enduml

